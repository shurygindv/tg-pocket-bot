{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "strict": true,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "types": ["reflect-metadata"],
      "target": "es6",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "app/*": ["src/*"]
      }
    },
    "exclude": ["node_modules"]
  }